# Example environment file for staging deployment
# Copy this to .env.staging and fill in the values
# Then run: npm run gh:config:env -- --env staging

# ==========================================
# SECRETS (will be added to GitHub Secrets)
# ==========================================

# SSH private key for deployment (paste the entire private key)
SSH_PRIVATE_KEY=""

# Directus secret key (generate with: openssl rand -base64 32)
DIRECTUS_SECRET=""

# Directus admin credentials
DIRECTUS_ADMIN_EMAIL=""
DIRECTUS_ADMIN_PASSWORD=""

# Directus admin token for CLI operations (generate in Directus admin panel under Settings > Access Tokens)
DIRECTUS_ADMIN_TOKEN=""

# PostgreSQL database password
DB_PASSWORD=""

# Visual Editor token for embedding the frontend application in Directus visual editor and live preview
# Should be attributed to a user with read only permissions on the relevant collections
# If ignored, the live preview will only show published content.
VISUAL_EDITOR_TOKEN=""

# ==========================================
# VARIABLES (will be added to GitHub Variables)
# ==========================================

# Server connection details
SERVER_HOST=""
SSH_USER=""
DEPLOY_PATH=""

# Database configuration
DB_DATABASE="directus"
DB_USER="directus"

# Public URLs
FRONTEND_PUBLIC_URL=""
API_PUBLIC_URL=""

# Port bindings for reverse proxy configuration
# Set fixed ports for staging/production environments
API_PORT="8055"
FRONTEND_PORT="3000"
